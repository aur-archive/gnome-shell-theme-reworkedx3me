pkgname=gnome-shell-theme-reworkedx3me
pkgver=20111107
pkgrel=5
pkgdesc="Gnome shell 3.2 compatible version of the X3ME theme, by Sishnizzle" 
url="http://sishnizzle.deviantart.com/art/ReworkedX3ME-264438890"
license=('GPL')
arch=('any')
depends=('gnome-shell>=3.2')
makedepends=('p7zip')
optdepends=('gnome-tweak-tool: A tool to customize advanced GNOME 3 options.')
source=("http://www.deviantart.com/download/264438890/reworkedx3me_by_sishnizzle-d4dfucq.7z")
md5sums=('6e24b4408218c3614f2783eca3640311')


build() {
  mkdir -p ${pkgdir}/usr/share/themes/reworkedx3me/gnome-shell
  7z e ${srcdir}/reworkedx3me_by_sishnizzle-d4dfucq.7z -o${pkgdir}/usr/share/themes/reworkedx3me/gnome-shell/



}


